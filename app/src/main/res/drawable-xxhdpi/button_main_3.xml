            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#ff1af7e2" />
            <gradient android:angle="-90" android:startColor="#ff8eeaea" android:endColor="#fffafff8"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
