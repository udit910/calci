<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#ffb1b1b1" />
            <gradient android:angle="-90" android:startColor="#ff747474" android:endColor="#ffd1d1d1"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1.3dip" android:color="#ff1af7e2" />
            <gradient android:angle="-90" android:startColor="#ff9c9c9c" android:endColor="#ff494949" />
        </shape>
    </item>
</selector>