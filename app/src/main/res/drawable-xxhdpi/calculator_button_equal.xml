<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1.3dip" android:color="#ffc3c3c3" />
            <gradient android:angle="-90" android:startColor="#fff9a02f" android:endColor="#fffcd94f"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1.3dip" android:color="#ff1af7e2" />
            <gradient android:angle="-90" android:startColor="#fffcd94f" android:endColor="#fff9a02f" />
        </shape>
    </item>
</selector>