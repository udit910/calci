<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1.3dip" android:color="#ffa1a1a1" />
            <gradient android:angle="-90" android:startColor="#ff030303" android:endColor="#ffa1a1a1"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1.3dip" android:color="#ff1af7e2" />
            <gradient android:angle="-90" android:startColor="#ff8a8a8a" android:endColor="#ff1f1f1f" />
        </shape>
    </item>
</selector>